{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "plugins",
  "description": "main plugins",
  "windows": ["main"],
  "permissions": [
    "os:default",
    "os:allow-arch",
    "os:allow-exe-extension",
    "os:allow-family",
    "os:allow-hostname",
    "os:allow-locale",
    "os:allow-os-type",
    "os:allow-platform",
    "os:allow-version",
    "path:default",
    "store:default",
    "utils:default",
    "clipboard-manager:default",
    "clipboard-manager:allow-clear",
    "clipboard-manager:allow-read-image",
    "clipboard-manager:allow-read-text",
    "clipboard-manager:allow-write-html",
    "clipboard-manager:allow-write-image",
    "clipboard-manager:allow-write-text",
    "fs:default",
    "fs:read-all",
    "fs:write-all",
    "fs:allow-exists",
    "fs:allow-remove",
    "fs:allow-stat",
    "fs:allow-lstat",
    "fs:allow-fstat",
    "fs:allow-mkdir",
    "fs:allow-watch",
    "fs:allow-unwatch",
    "fs:allow-rename",
    {
      "identifier": "fs:scope",
      "allow": [
        {
          "path": "**/*"
        }
      ]
    }
  ]
}
